<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7Velasquez9B.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="mensaje" />
            <Label Text="Nombre: " />
            <Entry x:Name="Nombre" Placeholder="Nombre"/>

            <Label Text="Usuario: " />
            <Entry x:Name="Usuario" Placeholder="Nombre"/>

            <Label Text="Contraseña: " />
            <Entry x:Name="Contrasena" Placeholder="Nombre"/>

            <Button x:Name="btn_Actualizar" Text="Actualizar" Clicked="btn_Actualizar_Clicked" />
            <Button x:Name="btn_Eliminar" Text="Eliminar" Clicked="btn_Eliminar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>