<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7Velasquez9B.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nombre: "/>
            <Entry x:Name="txtNombre" Placeholder="Introduce tu nombre" />

            <Label Text="Usuario: "/>
            <Entry x:Name="txtUsuario" Placeholder="Escribe tu usuario" Keyboard="Email" />
            
            <Label Text="Contraseña: "/>
            <Entry x:Name="txtContrasena" Placeholder="Elige una contraseña" IsPassword="True" />

            <Button x:Name="btnAgregar" Text="Agregar" Clicked="btnAgregar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>